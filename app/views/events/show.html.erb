<div class="container">



  <div class="page-header">
    <div class = "pull-right">
      <%= link_to 'Edit', edit_location_event_path, class: 'btn btn-info' %>
      <%= link_to 'Delete', location_event_path(@location, @event), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
    </div>
    <h1><%= @event.description %></h1>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to @location.name, location_path(@location) %></li>
    <li class="active"><%= @event.description %></li>
  </ol>

  <dl class="dl-horizontal">
  <dt>Description</dt> <dd><%= @event.description %></dd>
  </dl>

</div>
