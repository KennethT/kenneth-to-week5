<div class="container">

<div class="page-header">
  <div class="pull-right"><%= link_to 'New Locations', new_location_path, class: 'btn btn-info' %></div>
  <h1>Locations</h1>
</div>

  <table class="table">
    <thead>
      <tr>
      <th>Description</th>
      <th>Address</th>
      <th>Zip Code</th>
      <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @location.each do |location| %>
      <tr>
        <td><%= link_to location.name, location %></td>
        <td><%= location.address %></td>
        <td><%= location.zipcode %></td>
        <td class="text-right"><%= link_to 'Edit', edit_location_path(location), class: 'btn btn-info' %>
             <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
        <td><%= link_to "Create Event", new_location_event_path(location), class: 'btn btn-info' %> </td>
      <% end %>
    </tbody>
  </table>
</div>
